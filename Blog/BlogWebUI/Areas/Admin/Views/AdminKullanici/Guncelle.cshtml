@model BlogWebUI.Areas.Admin.Models.AdminKullaniciViewModel
@{
    <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">Makale Oluştur</h3>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm("Guncelle", "AdminKullanici", new { area = "", @class = "form-control" }, FormMethod.Post))
            {
                @Html.ValidationSummary(true)

                @Html.TextBox("AdSoyad", "", new { @class = "form-control", @placeholder = "AdSoyad" })
                <br>
                @Html.TextBox("Email", "", new { @class = "form-control", @placeholder = "Email" })
                <br> @Html.TextBox("Parola", "", new { @class = "form-control", @placeholder = "Parola" })
                <br> @Html.TextBox("RolId", "", new { @class = "form-control", @placeholder = "RolId(1-2-3)" })
                <br>
                <input type="file" class="form-control">
                <br>


                <br>
                <input type="hidden" asp-for="@Model.Kullanici.KullaniciId" />
                <button type="submit" class="btn btn-primary btn-lg  ">Güncelle</button>

            }
        </div>
    </div>

}
