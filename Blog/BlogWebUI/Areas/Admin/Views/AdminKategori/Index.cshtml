@model BlogWebUI.Areas.Admin.Models.AdminKategoriViewModel

@{
}
@{
    <!-- TABLE HOVER -->
    <div class="panel">
        <div class="panel-heading ">
            <h3 class="panel-title">Kategori İşlemleri</h3>
        </div>
        <div class="col-md-12 ">
            @Html.ActionLink("", "KategoriOlustur", "AdminKategori", new { @controller = "AdminKategori" } ,new { @class = "btn btn-success right btn-lg lnr lnr-pencil", })
             @if (ViewBag.eklendiMi==true)
             {
                 @Html.Label("Başarıyla Eklendi!");
             }
             <br />
            <br />
        </div>
        <div class="panel-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Foto</th>
                        <th>Kategori Adı</th>
                        <th>Açıklama</th>
                      
                    </tr>
                </thead>
                <tbody>
                    @using (Html.BeginForm("Sil", "AdminKategori", new { enctype = "multipart/form-data" }, FormMethod.Post))
                    {
                        @foreach (var item in Model.Kategori)
                        {
                    <tr>

                        <td>@item.KategoriId
                      
                        <td> <img src="~/images/KategoriFoto/@item.KategoriImg" class="img-circle" width="32" height="32" /></td></td>
                        <td>@item.KategoriAdi</td>
                        <td>@item.KategoriAciklama</td>
                        <td>
                            <button type="submit" name="id" value="@item.KategoriId" formaction=@Url.Action("Sil") formmethod="post" class="btn btn-danger btn-sm ">
                                <span class="lnr lnr-trash"></span>
                            </button>
                        </td>
                        @*<td><button type="button" class="btn btn-danger"><span class="lnr lnr-trash"></span></button></td>*@

                    </tr>
                        }
                    }
                    </tbody>
            </table>
        </div>
    </div>
    <!-- END TABLE HOVER -->
    }
